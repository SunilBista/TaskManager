{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "types": ["node", "jest", "supertest"]
  },
  "include": ["src/**/*.ts", "index.ts"],
  "exclude": ["node_modules"]
}
